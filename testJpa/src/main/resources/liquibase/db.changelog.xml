<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet
    id="1"
    author="csc">
    <createTable tableName="SIMPLE_TABLE">
      <column
        name="ID"
        type="int">
        <constraints
          primaryKey="true"
          nullable="false" />
      </column>
      <column
        name="DATA"
        type="varchar(50)">
        <constraints nullable="false" />
      </column>
    </createTable>

    <createSequence
      sequenceName="SEQ_SIMPLE_TABLE_ID"
      startValue="50"
      incrementBy="50" />
  </changeSet>

  <changeSet
    id="2"
    author="csc">
    <createTable tableName="SIMPLE_SPRING">
      <column
        name="ID"
        type="int">
        <constraints
          primaryKey="true"
          nullable="false" />
      </column>
      <column
        name="DATA"
        type="varchar(50)">
        <constraints nullable="false" />
      </column>
    </createTable>

    <createSequence
      sequenceName="SEQ_SIMPLE_SPRING_ID"
      startValue="50"
      incrementBy="50" />
  </changeSet>

  <changeSet
    id="3"
    author="csc">
    <createTable tableName="PARENT_TABLE">
      <column
        name="ID"
        type="int">
        <constraints
          primaryKey="true"
          nullable="false" />
      </column>
      <column
        name="DATA"
        type="varchar(50)">
        <constraints nullable="false" />
      </column>
    </createTable>

    <createSequence
      sequenceName="SEQ_PARENT_TABLE_ID"
      startValue="50"
      incrementBy="50" />

    <createTable tableName="CHILD_TABLE">
      <column
        name="ID"
        type="int">
        <constraints
          primaryKey="true"
          nullable="false" />
      </column>
      <column
        name="DATA"
        type="varchar(50)">
        <constraints nullable="false" />
      </column>
      <column
        name="PARENT_ID"
        type="int">
        <constraints nullable="false" />
      </column>
    </createTable>

    <addForeignKeyConstraint
      constraintName="fk_child_parent"
      referencedTableName="PARENT_TABLE"
      baseColumnNames="PARENT_ID"
      baseTableName="CHILD_TABLE"
      referencedColumnNames="ID"
      onDelete="CASCADE" />

    <createSequence
      sequenceName="SEQ_CHILD_TABLE_ID"
      startValue="50"
      incrementBy="50" />

  </changeSet>



</databaseChangeLog>